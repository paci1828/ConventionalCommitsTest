{
  "version": "1.0.3",
  "scripts": {
    "changelog": "npm run check-commits && conventional-changelog -p angular -i CHANGELOG.md -s -r 0 && npm run increment-version",
    "check-commits": "git log --oneline HEAD...HEAD@{1} | wc -l | tr -d '[:space:]'",
    "increment-version": "npm version patch"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/prompt"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "conventional-changelog-cli": "^4.1.0"
  }
}
